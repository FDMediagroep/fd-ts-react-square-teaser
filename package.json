{
  "name": "@fdmg/fd-square-teaser",
  "version": "2.0.3",
  "description": "FD-themed square teaser",
  "types": "dist/SquareTeaser.d.ts",
  "main": "dist/square-teaser.js",
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:FDMediagroep/fd-ts-react-square-teaser.git"
  },
  "scripts": {
    "build-demo": "npm run copy-img && npm run copy-demo-html && cross-env NODE_ENV=production webpack --mode=production --config webpack.demo.config.js",
    "build-dev": "webpack --mode=development",
    "build-prod": "cross-env NODE_ENV=production webpack --mode=production",
    "copy-demo-html": "cpx -p -v \"demo/**/*.html\" \"dist/\"",
    "copy-img": "cpx -p -v \"img/**/*\" \"dist/\"",
    "lint": "tslint -p .",
    "release": "npm update && npm i && npm run test && npm run lint && npm run build-prod",
    "test": "jest",
    "tsc": "tsc -d",
    "updateSnapshot": "jest --updateSnapshot",
    "watch": "npm run build-prod -- --watch",
    "watch-demo": "npm run build-demo -- --watch",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "keywords": [
    "FD",
    "FDMG",
    "Square Teaser",
    "TypeScript",
    "React"
  ],
  "author": "Willem Liu",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.0",
    "@types/react-test-renderer": "^16.9.0",
    "@types/styled-components": "5.0.1",
    "@types/uniqid": "^4.1.3",
    "@types/webpack-env": "^1.14.0",
    "awesome-typescript-loader": "^5.2.1",
    "chokidar": "^3.0.2",
    "coveralls": "^3.0.6",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.0",
    "har-validator": "^5.1.3",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "react-test-renderer": "^16.9.0",
    "ts-jest": "^25.1.0",
    "tslint": "^5.20.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.8"
  },
  "dependencies": {
    "@fdmg/fd-card": "^2.0.2",
    "@fdmg/fd-teaser": "^2.0.3",
    "@fdmg/fd-typography": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0",
    "uniqid": "^5.2.0",
    "snyk": "^1.319.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/(.*)(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "dist/coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "snyk": true
}
